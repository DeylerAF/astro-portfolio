---
const { href } = Astro.props;
---

<a
    href={href}
    role="link"
    rel="noopener noreferrer"
    target="_blank"
    class="inline-flex items-center text-lg font-medium hover:font-bold text-lime-600 dark:text-lime-400 hover:text-lime-400 dark:hover:text-lime-600 transition"
>
    <slot />
</a>
