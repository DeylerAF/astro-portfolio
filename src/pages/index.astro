---
import Layout from "../layouts/Layout.astro";
import Badge from "../components/Badge.astro";
import LinkedIn from "../icons/LinkedIn.astro";
import GitHub from "../icons/GitHub.astro";
import SocialMediaIcons from "../components/SocialMediaIcons.astro";
import Image from "astro/components/Image.astro";
import Experience from "../components/Experience.astro";
import SectionContainer from "../components/SectionContainer.astro";
import SuitcaseIcon from "../icons/SuitcaseIcon.astro";
---

<Layout
    title="Deyler.A.F || Full-Stack Developer"
    description="With a passion for turning innovative ideas into digital realities, I specialize in creating elegant, user-friendly web solutions that drive results. Let's collaborate and bring your digital vision to life."
>
    <main>
        <SectionContainer id="" class="py-44 pb-24">
            <h1
                class="text-white text-5xl font-bold flex flex-row items-end gap-x-4 pb-10"
            >
                <span>
                    <Image
                        class="size-20 drop-shadow-[5px_5px_5px_rgba(255,255,255,0.1)]"
                        src="/src/images/hi.webp"
                        alt="greetin"
                        loading={"eager"}
                        width={80}
                        height={80}
                    />
                </span>
                <span class="flex flex-row items-center gap-x-4">
                    I'm Deyler.A.F
                    <a
                        href="https://www.linkedin.com/in/deyleraf/"
                        target="_blank"
                        rel="noopener noreferrer"
                        class="flex justify-center items-center"
                    >
                        <Badge>Open to work</Badge>
                    </a>
                </span>
            </h1>
            <h2 class="text-2xl opacity-80 text-wrap">
                <span>+4 years of experience as</span>
                <span class="text-lime-200/90">Full-Stack Developer</span>.
                <br />
                <span>From La Furtuana de San Carlos, Costa Rica.</span>
                <br />
                <span class="opacity-85">
                    With a passion for turning innovative ideas into digital
                    realities, I specialize in creating elegant, user-friendly
                    web solutions that drive results. Let's collaborate and
                    bring your digital vision to life.
                </span>
            </h2>
            <nav class="flex gap-x-4 mt-8">
                <SocialMediaIcons href="https://www.linkedin.com/in/deyleraf/">
                    <LinkedIn class="w-6 h-6" />
                    LinkedIn
                </SocialMediaIcons>
                <SocialMediaIcons href="https://github.com/DeylerAF">
                    <GitHub class="w-6 h-6" />
                    GitHub
                </SocialMediaIcons>
            </nav>
        </SectionContainer>
        <SectionContainer id="experience">
            <h2 class="text-2xl font-semibold mb-6 flex gap-x-3 items-center">
                <SuitcaseIcon class="size-7" />
                Work experience
            </h2>
            <Experience />
        </SectionContainer>
    </main>
</Layout>
